{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "type": "string",
      "minLength": 1
    },
    "skuName": {
      "type": "string",
      "defaultValue": "D1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    },
    "contrastDotnetOrDotnetCore": {
      "type": "string",
      "allowedValues": [
        "Dotnet",
        "DotnetCore"
      ],
      "metadata": {
        "description": "Select between the .NET Framework and the .NET Core Contrast Extension, based on which language the site deployed to this service will use."
      }
    },
    "contrastApiKey": {
      "type": "securestring"
    },
    "contrastAgentServiceKey": {
      "type": "securestring"
    },
    "contrastAgentUsername": {
      "type": "securestring"
    },
    "contrastURL": {
      "type": "securestring"
    },
    "contrastServerEnvironment": {
      "type": "string",
      "allowedValues": [
        "DEVELOPMENT",
        "QA",
        "PRODUCTION"
      ],
      "defaultValue": "QA"
    },
    "contrastApplicationGroup": {
      "type": "string",
      "metadata": {
        "description": "Comma separated list of the application groups the application should associated to"
      },
      "defaultValue": ""
    },
    "contrastServerName": {
      "type": "string",
      "defaultValue": ""
    },
    "copyCount": {
      "type": "int",
      "defaultValue": 5
    }
  },
  "variables": {
    "webSiteName": "[concat('webSite', uniqueString(resourceGroup().id))]",
    "insightsName":  "[concat('webSite', uniqueString(resourceGroup().id), 'Insights')]",
    "contrastExtensionPackage": {
      "Dotnet": {
        "name": "Contrast.NET.Azure.SiteExtension",
        "id": "{EFEB8EE0-6D39-4347-A5FE-4D0C88BC5BC1}",
        "path32": "D:\\home\\SiteExtensions\\Contrast.NET.Azure.SiteExtension\\ContrastAppService\\ContrastProfiler-32.dll",
        "path64": "D:\\home\\SiteExtensions\\Contrast.NET.Azure.SiteExtension\\ContrastAppService\\ContrastProfiler-64.dll"
      },
      "DotnetCore": {
        "name": "Contrast.NetCore.Azure.SiteExtension",
        "id": "{8B2CE134-0948-48CA-A4B2-80DDAD9F5791}",
        "path32": "D:\\home\\SiteExtensions\\Contrast.NetCore.Azure.SiteExtension\\ContrastNetCoreAppService\\runtimes\\win-x86\\native\\ContrastProfiler.dll",
        "path64": "D:\\home\\SiteExtensions\\Contrast.NetCore.Azure.SiteExtension\\ContrastNetCoreAppService\\runtimes\\win-x64\\native\\ContrastProfiler.dll"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "HostingPlan"
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]"
      }
    },
    {
      "apiVersion": "2018-11-01",
      "name": "[concat(variables('webSiteName'), '-', copyIndex())]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "Website"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "name": "[concat(variables('webSiteName'), '-', copyIndex())]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
        }
      },
      "copy": {
        "name": "sitecopy",
        "count": "[parameters('copyCount')]",
        "mode": "Serial"
      },
      "resources": [
        {
          "type": "Microsoft.Web/sites/siteextensions",
          "name": "[concat(variables('webSiteName'), '-', copyIndex(), '/', variables('contrastExtensionPackage')[parameters('contrastDotNetOrDotnetCore')].name)]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/', concat(variables('webSiteName'), '-', copyIndex()))]",
            "[resourceId('Microsoft.Web/sites/config', concat(variables('webSiteName'), '-', copyIndex()), 'appsettings')]"

          ],
          "apiVersion": "2018-11-01",
          "location": "[resourceGroup().location]"
        },
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', concat(variables('webSiteName'), '-', copyIndex()))]"
            //"[resourceId('Microsoft.Web/sites/siteextensions', concat(variables('webSiteName'), '-', copyIndex()), variables('contrastExtensionpackage')[parameters('contrastDotNetOrDotnetCore')].name)]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(concat('Microsoft.Insights/components/', concat(variables('insightsName'), '-', copyIndex())), '2015-05-01').InstrumentationKey]",
            "APPLICATIONINSIGHTS_CONNECTION_STRING": "[reference(concat('Microsoft.Insights/components/', concat(variables('insightsName'), '-', copyIndex())), '2015-05-01').ConnectionString]",
            "ApplicationInsightsAgent_EXTENSION_VERSION": "~2",
            "XDT_MicrosoftApplicationInsights_Mode": "recommended",
            "InstrumentationEngine_EXTENSION_VERSION": "~1",
            "DiagnosticServices_EXTENSION_VERSION": "~3",
            "APPINSIGHTS_PROFILERFEATURE_VERSION": "1.0.0",
            "XDT_MicrosoftApplicationInsights_BaseExtensions": "~1",
            "CONTRAST__API__API_KEY": "[parameters('contrastApiKey')]",
            "CONTRAST__API__SERVICE_KEY": "[parameters('contrastAgentServiceKey')]",
            "CONTRAST__API__URL": "[parameters('contrastURL')]",
            "CONTRAST__API__USER_NAME": "[parameters('contrastAgentUsername')]",
            "CONTRAST__SERVER__ENVIRONMENT": "[parameters('contrastServerEnvironment')]",
            "CONTRAST__APPLICATION__GROUP": "[parameters('contrastApplicationGroup')]",
            "CONTRAST__SERVER__NAME": "[parameters('contrastServerName')]",
            "MicrosoftInstrumentationEngine_RawProfilerHook": "[variables('contrastExtensionPackage')[parameters('contrastDotnetOrDotnetCore')].id]",
            "MicrosoftInstrumentationEngine_RawProfilerHookPath_32": "[variables('contrastExtensionPackage')[parameters('contrastDotnetOrDotnetCore')].path32]",
            "MicrosoftInstrumentationEngine_RawProfilerHookPath_64": "[variables('contrastExtensionPackage')[parameters('contrastDotnetOrDotnetCore')].path64]"
          }
        }
      ]
    },
    {
      "apiVersion": "2014-04-01",
      "name": "[concat(parameters('hostingPlanName'), '-', resourceGroup().name)]",
      "type": "Microsoft.Insights/autoscalesettings",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]": "Resource",
        "displayName": "AutoScaleSettings"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "profiles": [
          {
            "name": "Default",
            "capacity": {
              "minimum": 1,
              "maximum": 2,
              "default": 1
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": 80.0
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": 1,
                  "cooldown": "PT10M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT1H",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": 60.0
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": 1,
                  "cooldown": "PT1H"
                }
              }
            ]
          }
        ],
        "enabled": false,
        "name": "[concat(parameters('hostingPlanName'), '-', resourceGroup().name)]",
        "targetResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      }
    },
    {
      "name": "[concat(variables('insightsName'), '-', copyIndex())]",
      "copy": {
        "name": "insightcopy",
        "count": "[parameters('copyCount')]"
      },
      "type": "Microsoft.Insights/components",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', concat(variables('webSiteName'), '-', copyIndex()))]"
      ],
      "tags": {
        "displayName": "Component Insights"
      },
      "properties": {
        "applicationId": "[resourceId('Microsoft.Web/sites', variables('webSiteName'))]"
      }
    }
  ]
}